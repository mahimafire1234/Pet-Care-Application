<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.shop.PetCareTakerDetailActivity"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="@drawable/border"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/imgviewproductimg"
                />
            <!--    petcaretaker fullname-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvfull_name"
                android:textSize="20dp"
                android:textColor="@color/black"
                />

            <!--    age-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvage"
                android:textSize="17dp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvphonenum"
                android:textSize="17dp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvhireprice"
                android:textSize="24dp"
                android:textColor="#0019FF"
                />
            <!--    product description-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="Bio:"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvBio"
                android:textSize="15dp"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                >
                <!--    add to cart button-->
                <Button
                    android:id="@+id/btnaddtocart"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Add to Cart"
                    android:backgroundTint="#f15bb5"
                    />
                <!--    add to favorites button-->
                <Button
                    android:id="@+id/btnaddtofavs"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Add to Favorites"
                    android:backgroundTint="#3a86ff"
                    android:layout_marginBottom="20dp"
                    />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <!--    product image-->


</LinearLayout>
