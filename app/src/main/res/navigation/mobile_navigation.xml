<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.mahima.animestreamingapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_shop"
        android:name="com.mahima.animestreamingapp.ui.shop.ShopFragment"
        android:label="@string/title_shop"
        tools:layout="@layout/fragment_shop" />

    <fragment
        android:id="@+id/navigation_pet"
        android:name="com.mahima.animestreamingapp.ui.mypet.MypetFragment"
        android:label="@string/title_mypet"
        tools:layout="@layout/fragment_mypet" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.mahima.animestreamingapp.ui.myprofile.MyprofileFragment"
